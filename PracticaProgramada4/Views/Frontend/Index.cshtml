@{
    ViewBag.Title = "Web API";
}

<div class="container mt-4">
    <div class="mb-4">
        <h2 class="fw-semibold">Consultá un chiste, dato curioso o adivinanza</h2>
    </div>


    <div class="mb-3">
        <button class="btn btn-primary me-2" onclick="obtenerChiste()">Chiste</button>
        <button class="btn btn-info me-2" onclick="obtenerDato()">Dato Curioso</button>
        <button class="btn btn-warning" onclick="obtenerAdivinanza()">Adivinanza</button>
    </div>

    <div id="resultado" class="mt-3"></div>

    <div id="respuestaUsuario" class="mt-3" style="display: none;">
        <input type="text" id="respuesta" class="form-control mb-2" placeholder="Escribe tu respuesta...">
        <button class="btn btn-success" onclick="enviarRespuesta()">Enviar Respuesta</button>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/frontend.js"></script>
}
